# Bot domain (for reference; webhook URL is set in GitLab)
URL=https://yourbotdomain.com
# Port the server listens on
PORT=3013
# Log level: debug | info | warn | error
LOG_LEVEL=info

# Telegram Bot API token (from @BotFather)
TELEGRAM_TOKEN=your_telegram_bot_token
# Set to false to disable Telegram (fake client, for local testing)
TELEGRAM_ENABLED=true

# GitLab webhook secret (must match the token set in GitLab project Webhook)
GITLAB_SECRET_TOKEN=your_gitlab_webhook_secret
# JSON: GitLab project ID -> Telegram chat ID (e.g. group @ or numeric id)
# Example: {"42":"@mygroup","123":-1001234567890}
GITLAB_TELEGRAM_CHAT_MAPPING={"42":"@your_telegram_group"}

# Optional: only report pipelines for this branch (e.g. main)
# GITLAB_PIPELINE_BRANCH_NAME=main
# Optional: also report succeeding pipelines (default: only failed)
# GITLAB_PIPELINE_SHOW_SUCCESS=false
